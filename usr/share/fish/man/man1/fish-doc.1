>_ set \-g fish_prompt_pwd_dir_length 3
>_ prompt_pwd
/tmp/ban/sau/wit/mustard

>_ prompt_pwd \-\-full\-length\-dirs=2 \-\-dir\-length=1
/t/b/s/with/mustard

>_ echo (prompt_pwd | string split /)[\-1]
